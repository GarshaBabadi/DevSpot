@using DevSpot.Constants;
@model IEnumerable<JobPosting>
<h1 class="text-center m-5">All Developers Jobs</h1>

<div class="list-group">

    @foreach(var jobPosting in Model)
    {
        <div class="list-group-item">
            <h3>@jobPosting.Title</h3>
            <p>@jobPosting.Description</p>
            <p><strong>Company: </strong>@jobPosting.Company</p>
            <p><strong>Location: </strong>@jobPosting.Location</p>
            <p><strong>Posted Date: </strong>@jobPosting.PostedOn.ToShortDateString()</p>

            @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Employer))
            {
                <div>
                    <button onclick="deleteJobPosting" class="btn btn-sm btn-danger">Delete</button>
                </div>
            }
            
        </div>
    }

</div>

@section Scripts{
    <script>
        function jobPosting(id) {
            if(confirm("Are you sure you want to delete?"))
            $.ajax({
                url: "@Url.Action("Delete", "JobPostings")/" + id,
                type: "delete",
                success: function(result) {
                },
                Error : function (err) {
                    alert("An error message.")
                }
            })
        }
    </script>
}